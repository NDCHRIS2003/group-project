//.agentBox
// Displays the list of agency locations and agent listing in the travelexperts MySQL db
contacts_box
          packageContainer
            for results in agenciesRow
              agency_box
                h2=results.AgncyCity
                p=results.AgncyAddress+", "+results.AgncyCity+", "+results.AgncyProv+", "+results.AgncyCountry+", "+results.AgncyPostal
                p="Phone: "+results.AgncyPhone
                p="Monday – Friday: 8:00am – 5:00pm"
                p="Saturday: 10am – 5:30pm"
                p="Sunday:11am – 5:00pm"
contacts_box
 h2 Agents
          packageContainer
            for results in agentsRow
              agent_box
                h3=results.AgtFirstName+" "+results.AgtLastName
                p="Phone: "+results.AgtBusPhone
                p="Email: "+results.AgtEmail
                p="Position: "+results.AgtPosition

